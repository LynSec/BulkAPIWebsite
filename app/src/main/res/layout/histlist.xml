<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/prod_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/prod_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/prod_image"
            android:text="name_pr"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prod_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prod_name"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/prod_image"
            android:text="Line 2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/prod_date"
            android:layout_width="62dp"
            android:layout_height="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="116dp"
            android:layout_marginBottom="29dp"
            android:layout_toStartOf="@+id/pic_del"
            android:layout_toEndOf="@+id/prod_name"
            android:fontFamily="sans-serif-black"
            android:text="Line 3" />

        <TextView
            android:id="@+id/prod_details"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="99dp"
            android:layout_marginBottom="5dp"
            android:text="line 4" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

